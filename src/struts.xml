<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.devMode" value="true" />
    <constant name="struts.action.excludePattern" value="/ws"/>

    <package name="webserver" extends="struts-default">
        <interceptors>
            <interceptor name="myinterceptor" class="web.interceptor.MyInterceptor"/>
            <interceptor-stack name="newStack">
                <interceptor-ref name="myinterceptor"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>
        </interceptors>

        <global-results>
            <result name="login">login.jsp</result>
            <result name="exceptionError">/WEB-INF/error.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.NullPointerException" result="exceptionError" />
        </global-exception-mappings>

        <!-- talvez usar isto para que a default action seja a de login ?!? -->
        <!-- <default-action-ref name="login"/> -->

        <action name="login" class="web.action.LoginAction" method="execute">
            <interceptor-ref name="newStack"/>
            <result name="success">WEB-INF/home.jsp</result>
            <result name="error">WEB-INF/loginerror.jsp</result>
        </action>

        <action name="register" class="web.action.RegisterAction" method="execute">
            <interceptor-ref name="newStack"/>
            <result name="success" type="redirect">login.jsp</result>
            <result name="error" type="redirect">registererror.jsp</result>
        </action>

        <action name="createauction" class="web.action.CreateAuctionAction" method="execute">
            <interceptor-ref name="newStack"/>
            <result name="success" type="redirect">home.jsp</result>
            <result name="error" type="redirect">createauctionerror.jsp</result>
            <result name="login" type="redirect">login.jsp</result>
        </action>

        <action name="editauction" class="web.action.EditAuctionAction" method="execute">
            <interceptor-ref name="newStack"/>
            <result name="success" type="redirect">home.jsp</result>
            <result name="error" type="redirect">editauctionerror.jsp</result>
        </action>

        <action name="searchauction" class="web.action.SearchAuctionAction" method="execute">
            <interceptor-ref name="newStack"/>
            <result name="success" type="redirect">searchauctiondisplay.jsp</result>
            <result name="error" type="redirect">searchauctionerror.jsp</result>
        </action>

        <action name="detailauction" class="web.action.DetailAuctionAction" method="execute">
            <interceptor-ref name="newStack"/>
            <result name="success" type="redirect">detailauctiondisplay.jsp</result>
            <result name="error" type="redirect">detailauctionerror.jsp</result>
        </action>

        <action name="myauctions" class="web.action.MyAuctionsAction" method="execute">
            <interceptor-ref name="newStack"/>
            <result name="success" type="redirect">myauctions.jsp</result>
            <result name="error" type="redirect">myauctionserror.jsp</result>
        </action>

        <action name="bid" class="web.action.BidAction" method="execute">
            <interceptor-ref name="newStack"/>
            <result name="success" type="redirect">home.jsp</result>
            <result name="error" type="redirect">biderror.jsp</result>
        </action>

        <action name="message" class="web.action.MessageAction" method="execute">
            <interceptor-ref name="newStack"/>
            <result name="success" type="redirect">home.jsp</result>
            <result name="error" type="redirect">messageerror.jsp</result>
        </action>

        <action name="onlineusers" class="web.action.OnlineUsersAction" method="execute">
            <interceptor-ref name="newStack"/>
            <result name="success" type="redirect">onlineusers.jsp</result>
            <result name="error" type="redirect">onlineuserserror.jsp</result>
        </action>


    </package>
</struts>